@model comercializadora.DataBase.Finca

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="x_panel">
        <div class="x_title">
            <h2>Registro de Fincas</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ProductorID,"Productor", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ProductorID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProductorID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="center">
        <a href="@Url.Action("Index","Fincas")" class="btn btn-xs btn-danger" data-rel="tooltip">
            <i class="ace-icon fa fa-times"></i>
            Cancelar
        </a>
        <button class="btn btn-xs btn-info" id="btnGuardar" type="submit">
            <i class="ace-icon fa fa-check bigger-110"></i>
            Guardar
        </button>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
