
@model comercializadora.Models.PrecioVentaViewModel

@{
    ViewBag.Title = "Index";
}



<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>PRECIOS VENTA</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="@Url.Action("Create", "PrecioVenta")" class="btn btn-outline-info btn-sm" title="Registrar Nuevo">
                        <i class="ace-icon fa fa-plus-circle bigger-120"></i>
                        Registrar Nuevo
                    </a>
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">

            <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Precio de venta de Insumos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Precio de venta de Productos</a>
                </li>

            </ul>




            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">

                        <tr>
                            <th>
                                Insumo
                            </th>
                            <th>
                                Lista Precio
                            </th>
                            <th>
                                Precio
                            </th>
                            <th>
                                Fecha Desde
                            </th>
                            <th>
                                Fecha Hasta
                            </th>
                        </tr>

                        @for (int i = 0; i < Model.vPrecioVentaInsumos.Count(); i++)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.vPrecioVentaInsumos[i].Insumo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.vPrecioVentaInsumos[i].ListaPrecios)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.vPrecioVentaInsumos[i].Precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.vPrecioVentaInsumos[i].FechaDesde)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.vPrecioVentaInsumos[i].FechaHasta)
                        </td>

                    </tr>
                        }

                    </table>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">

                        <tr>
                            <th>
                                Producto
                            </th>
                            <th>
                                Lista Precios
                            </th>
                            <th>
                                Precio
                            </th>
                            <th>
                                Fecha Desde
                            </th>
                            <th>
                                Fecha Hasta
                            </th>
                        </tr>

                        @for (int i = 0; i < Model.vPrecioVentaProductos.Count(); i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vPrecioVentaProductos[i].Producto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vPrecioVentaProductos[i].ListaPrecios)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vPrecioVentaProductos[i].Precio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vPrecioVentaProductos[i].FechaDesde)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vPrecioVentaProductos[i].FechaHasta)
                                </td>

                            </tr>
                        }

                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

