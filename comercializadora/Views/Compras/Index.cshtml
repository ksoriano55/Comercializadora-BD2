@model IEnumerable<comercializadora.DataBase.Compra>

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>COMPRAS</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a href="@Url.Action("Create", "Compras")" class="btn btn-outline-primary btn-sm" title="Registrar Nuevo">
                            <i class="ace-icon fa fa-plus-circle bigger-120"></i>
                            Registrar Nuevo
                        </a>
                    </li>
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CodigoCompra)
                                        </th>
                                        <th>
                                            Proveedor
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Fecha)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FechaVencimiento)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ValorCompra)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SaldoPendiente)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CodigoCompra)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaVencimiento)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ValorCompra)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SaldoPendiente)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Detalles", "Details", new { id = item.CompraID })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
