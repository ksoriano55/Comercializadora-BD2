@model comercializadora.DataBase.Inventario

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Inventarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="x_panel">
        <div class="x_title">
            <h2>Entrada de Inventario</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.BodegaId, "Bodega", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("BodegaId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BodegaId, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        <input type="checkbox" onclick="yesnoCheck();" name="siNo" id="esInsumo" style="padding-top:20px" /> ¿Es Insumo?
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6" id="visibleProducto">
                        @Html.LabelFor(model => model.ProductoId, "Producto", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("ProductoId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProductoId, "", new { @class = "text-danger" })
                        <input type="hidden" id="productName" />
                    </div>

                    <div class="col-md-6" id="visibleInsumo">
                        @Html.LabelFor(model => model.InsumoId, "Insumo", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("InsumoId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.InsumoId, "", new { @class = "text-danger" })
                        <input type="hidden" id="insumoName" />
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(model => model.Disponible, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Disponible, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-2">
                        <button id="AgregarInventario" class="btn btn-xs btn-warning" type="button">
                            <i class="ace-icon fa fa-plus-circle bigger-120"></i>
                            Añadir
                        </button>
                    </div>
                </div>
                <br />
                <br />
                <hr />
                <div class="form-group row">
                    <div class="table-responsive col-md-12">
                        <table id="TableInventario" class="table table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>Descripcion</th>
                                    <th>Cantidad</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-12 ">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                    </div>
                </div>
            </div>

            </div>
    </div>

}

@section Scripts {
    <script src="~/Scripts/App/Inventario.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

}
