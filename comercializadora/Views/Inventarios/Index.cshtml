@model comercializadora.Models.InventariosViewModel

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12">
    <div class="x_panel">
        <div class="x_title">
            <h2><i class="fa fa-bars"></i> Inventarios</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="@Url.Action("Create", "Inventarios")" class="btn btn-outline-info btn-sm" title="Registrar Nuevo">
                        <i class="ace-icon fa fa-plus-circle bigger-120"></i>
                        Registrar Nuevo
                    </a>

                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Inventario de Productos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Inventario de Insumos</a>
                </li>

            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                        <tr>
                            <th>
                                Codigo Bodega
                            </th>
                            <th>
                                Nombre Bodega
                            </th>
                            <th>
                                Producto
                            </th>
                            <th>
                                Disponible
                            </th>
                        </tr>

                        @for (int i = 0; i < Model.vInventarioProductos.Count(); i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vInventarioProductos[i].Codigo_Bodega)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vInventarioProductos[i].Nombre_Bodega)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vInventarioProductos[i].Nombre_Producto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vInventarioProductos[i].Disponible)
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                        <tr>
                            <th>
                                Codigo Bodega
                            </th>
                            <th>
                                Nombre Bodega
                            </th>
                            <th>
                                Insumo
                            </th>
                            <th>
                                Disponible
                            </th>
                        </tr>

                        @for (int i = 0; i < Model.vInventarioInsumos.Count(); i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vInventarioInsumos[i].Codigo_Bodega)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vInventarioInsumos[i].Nombre_Bodega)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vInventarioInsumos[i].Nombre_Insumo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.vInventarioInsumos[i].Disponible)
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

