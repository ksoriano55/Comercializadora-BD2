@model comercializadora.DataBase.Cobros

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create", "Cobros", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="x_panel">
        <div class="x_title">
            <h2>Registro nuevo cobro</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.clienteId, "cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("clienteId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.clienteId, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.facturaId, "factura", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("facturaId", new SelectList(string.Empty, "Value", "Text"), "--Seleccione factura--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.facturaId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.TipoPagoID, "TipoPagoID", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("TipoPagoID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TipoPagoID, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(model => model.Fecha, new { @type = "date", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Monto, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="center">
                    <a href="@Url.Action("Index","Cobros")" class="btn btn-xs btn-danger" data-rel="tooltip">
                        <i class="ace-icon fa fa-times"></i>
                        Cancelar
                    </a>
                    <button class="btn btn-xs btn-info" id="btnGuardar" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/Scripts/App/Generalidades.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
