@model comercializadora.DataBase.ArqueoCaja
@using comercializadora.DataBase
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="x_panel">
        <div class="x_title">
            <h2>Registro de arqueo de caja</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.CajeroID, "CajeroID", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("CajeroID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CajeroID, "", new { @class = "text-danger" })
                        <input type="hidden" id="productName" />
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.FechaInicio, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(model => model.FechaInicio, new { @type = "date", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-md-3">
                        @Html.LabelFor(model => model.FechaFinal, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(model => model.FechaFinal, new { @type = "date", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FechaFinal, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.Partial("_CreateArqueoDetalle", new ArqueoCajaDetalle())

                <br />
                <br />
                <div class="col-md-6 col-sm-6">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2><small>Totales</small></h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <label>Total Efectivo</label>
                            <input type="text" id="productName" class="form-control" readonly />

                            <label>Total Cheque</label>
                            <input type="text" id="productName" class="form-control" readonly />
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-6">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2><i class="fa fa-money"></i> Especificaciones <small>Arqueo de caja</small></h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Efectivo</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Cheques</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                    <table id="TableEfectivo" class="table table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Denominacion</th>
                                                <th>Cantidad</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                    <table id="TableCheque" class="table table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Banco</th>
                                                <th>Numero Cheque</th>
                                                <th>Monto</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>


        </div>
    </div>
    <div class="center">
        <a href="@Url.Action("Index","ArqueoCajas")" class="btn btn-xs btn-danger" data-rel="tooltip">
            <i class="ace-icon fa fa-times"></i>
            Cancelar
        </a>
        <button class="btn btn-xs btn-info" id="btnGuardar" type="submit">
            <i class="ace-icon fa fa-check bigger-110"></i>
            Guardar
        </button>

    </div>
}


@section Scripts {
    <script src="~/Scripts/App/Arqueo.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
